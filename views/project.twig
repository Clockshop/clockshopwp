{% extends "base.twig" %}

{% block content %}	

	<div class="project-single">

		<div class="project-menu">
			<div class="content">
				<h1>{{term.title}}</h1>
				<ul>
					{% for item in termMenu.items %}

						{% if item.current == true %}
							<li class="active">
						{% elseif ((post.project_content_type == 'artist_single') and (function('get_field', 'project_content_type', item.object_id) == 'artist_list')) %}
							<li class="active">
						{% else %}
							<li>
						{% endif %}
							<a href="{{item.url}}">
								{{item.name}}
							</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>

		<main class="content">
			{% if post.get_field('project_content_type') == 'text' %}

				{{post.get_field('project_text_content')}}

			{% elseif post.get_field('project_content_type') == 'artist_list' %}

				<div class="grid featured-grid">
				    {% for item in post.get_field('project_grid_content') %}
						<div class="grid-3">
							<div class="imagecell">
								<a href="{{item.artwork_or_artist.link}}"><img src="{{TimberImage(item.artwork_or_artist.thumbnail).src('grid-3')}}" /></a>
							</div>
							<a href="{{item.artwork_or_artist.link}}"><h3 class="project-title">{{item.artwork_or_artist.post_title}}</h3></a>
							<h3 class="project-subtitle">{{item.artwork_or_artist.project_artwork_and_artists_subtitle}}</h3>
						</div>
				    {% endfor %}
				</div>

			{% elseif post.get_field('project_content_type') == 'artist_single' %}

			    {% if post.get_field('project_image_slider') %}
				    <div class="project-slider">
					    {% for item in post.get_field('project_image_slider') %}
							<div class="project-slide">
								<img src="{{TimberImage(item.slide_image).src|resize(1900)}}" />
								<div class="caption caption-left">
									{{item.slide_caption_left}}
								</div>
								<div class="caption caption-right">
									{{item.slide_caption_right}}
								</div>
							</div>
					    {% endfor %}
				    </div>
			    {% endif %}
				
				<div class="project-content">
					{{post.get_field('project_text_content')}}				
				</div>

			{% endif %}

			{% for item in termMenu.items %}
				{% if check == true %}
					<div class="project-next">
						<a href="{{item.link}}">
							Next: {{item.title}}
						</a>
					</div>
					{% set check = false %}
				{% endif %}
				{% if item.current %}
					{% set check = true %}
				{% endif %}
			{% endfor %}

		</main>
		
	</div>

{% endblock %}
