{% extends "base.twig" %}

{% block content %}

	<div class="content donate">

		<div class="donate-title">
			<h1>Donate to Clockshop</h1>
		</div>

		{% if post.content %}
			<div class="donate-content">
				{{ post.content }}
			</div>
		{% endif %}

		{% for item in post.get_field('donate_sections') %}

			{% if item.donate_section_title or item.donate_section_content %}
		
				<section>

					{% if item.donate_section_title %}
						<h4>{{ item.donate_section_title }}</h4>
					{% endif %}

					{% if item.donate_section_content %}
						<div class="section-content">
							{{ item.donate_section_content }}
						</div>
					{% endif %}

				</section>

			{% endif %}

		{% endfor %}

	</div>

{% endblock %}
